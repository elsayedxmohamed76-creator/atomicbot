# AtomicBot gateway â€” Podman Quadlet (rootless)
# Installed by setup-podman.sh into atomicbot's ~/.config/containers/systemd/
# {{ATOMICBOT_HOME}} is replaced at install time.

[Unit]
Description=AtomicBot gateway (rootless Podman)

[Container]
Image=atomicbot:local
ContainerName=atomicbot
UserNS=keep-id
Volume={{ATOMICBOT_HOME}}/.atomicbot:/home/node/.atomicbot
EnvironmentFile={{ATOMICBOT_HOME}}/.atomicbot/.env
Environment=HOME=/home/node
Environment=TERM=xterm-256color
PublishPort=18789:18789
PublishPort=18790:18790
Pull=never
Exec=node dist/index.js gateway --bind lan --port 18789

[Service]
TimeoutStartSec=300
Restart=on-failure

[Install]
WantedBy=default.target
